@model ResetPasswordVM

<div class="col mt-3">
    <h1>Reset Password</h1>
    <div class="text-danger">@Html.ValidationSummary()</div>
    <form method="post">
        <label>Enter your new password</label>
        <input asp-for="Password" class="form-control mt-3" /> <br />
        <label>Confirm your new password</label>
        <input asp-for="RePassword" class="form-control mt-3" /> <br />
        <br />
        <span class="text-danger">
            @Html.ValidationMessage("Error")
        </span>
        <br />
        <br />
        <button class="btn btn-outline-dark" type="submit">Reset</button>
    </form>
</div>