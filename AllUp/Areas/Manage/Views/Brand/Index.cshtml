@model PaginationVM<Brand>
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Brands Table</h1>

<a class="btn btn-primary mt-4 mb-4" href="/manage/brand/create">Create a brand</a>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Brands</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Product Count</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Brand brand in Model)
                    {
                        <tr>
                            <td>@brand.Id</td>
                            <td>@brand.Name</td>
                            <td>@brand.CreatedAt.ToShortDateString()</td>
                            <td>@brand.Products.Count</td>
                            <td>
                                <a class="btn btn-secondary" href="/manage/brand/update/@brand.Id">update</a>
                                <a class="btn btn-secondary" href="/manage/brand/delete/@brand.Id">delete</a>
                                <a class="btn btn-secondary" href="/manage/brand/detail/@brand.Id">detail</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item @(Model.HasPrevious ? "" : "d-none")"><a class="page-link" href="/manage/brand?page=@(Model.CurrentPage-1)">Previous</a></li>
                    @for (int i = Model.Start; i <= Model.End; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "disabled" : "")"><a class="page-link" href="/manage/brand?page=@i">@i</a></li>
                    }
                    <li class="page-item @(Model.HasNext ? "" : "d-none")"><a class="page-link" href="/manage/brand?page=@(Model.CurrentPage+1)">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
