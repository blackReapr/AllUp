@model Product
<form enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter category name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Enter category name">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Enter category name">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="DiscountPrice"></label>
        <input asp-for="DiscountPrice" class="form-control" placeholder="Enter category name">
        <span class="text-danger" asp-validation-for="DiscountPrice"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsBestSeller"></label>
        <input asp-for="IsBestSeller" class="form-control">
        <span class="text-danger" asp-validation-for="IsBestSeller"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsFeatured"></label>
        <input asp-for="IsFeatured" class="form-control">
        <span class="text-danger" asp-validation-for="IsFeatured"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsNewArrival"></label>
        <input asp-for="IsNewArrival" class="form-control">
        <span class="text-danger" asp-validation-for="IsNewArrival"></span>
    </div>
    <div id="fileInput" class="form-group d-none">
        <label asp-for="Photo"></label>
        <input asp-for="Photo" class="form-control" accept="image/*">
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div id="parentId" class="form-group">
        <label asp-for="Brand"></label>
        <select asp-for="Brand">
            @foreach (Brand brand in ViewBag.Brands)
            {
                <option value="@brand.Id">@brand.Name</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="Brand"></span>
    </div>
    <div id="parentId" class="form-group">
        <label asp-for="Category"></label>
        <select asp-for="Category">
            @foreach (Category category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="Brand"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>